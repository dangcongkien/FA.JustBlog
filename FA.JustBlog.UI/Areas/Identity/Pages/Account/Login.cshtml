@page
@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Identity/Pages/_IdentityLayout.cshtml";
    var thongbao = TempData["ErrorMessage"];
}

<h1>@ViewData["Title"]</h1>
@if (TempData.ContainsKey("ErrorMessage")) {
    <partial name="_StatusMessage" model="thongbao" />
}
<div class="row justify-content-center align-items-center" style="height:500px;">
    <div class="col-md-10">
        <section >
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div style="margin: 8px 0">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label" style="font-size: 16px">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark rounded-2">Log in</button>
                </div>
                @*<div>
                    <p style="margin: 10px 10px 10px 0; font-size: 16px">
                        <a class="text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot your password</a>
                    </p>
                    <p style="margin: 10px 10px 10px 0; font-size: 16px">
                        <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p style="margin: 10px 10px 10px 0; font-size: 16px">
                        <a class="text-decoration-none" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>*@
            </form>
        </section>
    </div>
    <div style="text-align: center; font-size: 14px; font-family: Arial, Helvetica, sans-serif">
        Or
    </div>
    <div class="col-md-10 col-md-offset-2">
        @if ((Model.ExternalLogins?.Count ?? 0) != 0)
        {
            <section>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p style="margin: 0">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-primary rounded-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="margin: 4px 0; width: 100%; background-color: #2374f2">Sign in with @provider.DisplayName</button> <br />
                            }
                        </p>
                    </div>
                </form>
            </section>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
