@page "/admin/role/updaterole/{handler?}/"
@model FA.JustBlog.UI.Areas.Identity.Pages.Role.AddModel
@{
    var btnText = Model.IsUpdate ? "Update Role" : "Add new role";
    Layout = "~/Areas/Admin/Views/Shared/_ActionLayout.cshtml";
}

<h2 style="font-weight: 600">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <input type="hidden" asp-for="IsUpdate" />

            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" style="margin-bottom: 10px">
                <span asp-validation-for="Input.Name" class="text-danger"></span>

                <button id="add-or-edit-role" type="submit"
                        asp-page-handler="AddOrUpdate" class="btn btn-secondary rounded-2">
                    @btnText
                </button>
                <a class="btn btn-secondary rounded-2" asp-page="./Index">Return List Roles</a>
            </div>
        </form>
    </div>
</div>