@page "/Admin/Role/"
@model FA.JustBlog.UI.Areas.Identity.Pages.Role.IndexModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_ActionLayout.cshtml";
}
<h2 style="font-weight: 600"> List roles</h2>
    <partial name="_StatusMessage" model="@Model.StatusMessage" />

    <form method="POST" class="my-1 d-inline">
    <button class="btn btn-secondary btn-sm rounded-2" asp-page="./Add"
                asp-page-handler="StartNewRole">
            Add New Role
        </button>
    </form>
    <a class="btn btn-secondary btn-sm rounded-2" asp-page="./User">Add Role For User</a>

    <table class="table">
        <tr>
            <th>Role ID</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach (var role in @Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form method="POST" class="d-inline">
                        <button name="Input.ID" value="@role.Id" class="btn btn-success btn-sm rounded-2"
                            asp-page="./Add" asp-page-handler="StartUpdate">
                            Update Role
                        </button>
                    </form>
                    <form method="POST" class="d-inline">
                        <button name="Input.ID" value="@role.Id" class="btn btn-danger btn-sm rounded-2"
                            asp-page="./Delete">
                            Delete Role
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
