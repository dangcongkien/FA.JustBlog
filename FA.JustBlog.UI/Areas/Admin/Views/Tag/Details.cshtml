@model FA.JustBlog.Core.Models.Tags
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_ActionLayout.cshtml";
}

<form method="post" asp-controller="Tag" asp-action="Details">
	<input asp-for="@Model.TagId" class="form-control" hidden/>

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h4 class="text-dark">Details</h4>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Description"></label>
			<input asp-for="@Model.Description" rows="3" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.UrlSlug"></label>
			<input asp-for="@Model.UrlSlug" rows="3" class="form-control" disabled/>
		</div>

		<a asp-controller="Tag" asp-action="Index" class="btn btn-outline-dark" style="width:150px">
			Back to list
		</a>
	</div>
</form>
